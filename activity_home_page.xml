<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="30dp"
        android:background="#009688"
        android:gravity="center"
        android:text="Lost and Found App"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:text="Welcome back User!"
        android:textSize="20sp" />

    <Button
        android:id="@+id/newAdvertButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="createNewAdvert"
        android:text="CREATE A NEW ADVERT"
        android:textSize="16sp" />

    <Button
        android:id="@+id/showAllAdverts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="loadAllAdverts"
        android:text="SHOW ALL LOST AND FOUND ITEMS"
        android:textSize="16sp" />

    <Button
        android:id="@+id/showMapButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="showOnMap"
        android:text="SHOW ON MAP"
        android:textSize="16sp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:onClick="logout"
        android:text="LOG OUT"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/footerText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="175dp"
        android:background="#009688"
        android:gravity="center"
        android:text="SIT305 Task 9.1P"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>